<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/android:colorBackground"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_remaining_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="24dp"
        android:alpha="0.69"
        app:strokeWidth="0dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_card_remaining_balance"
            android:paddingVertical="18dp"
            android:paddingHorizontal="24dp"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title_remaining_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="0.12"
                android:text="@string/title_remaining_balance"
                android:textColor="?attr/colorTitleCardRemainingBalance"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_value_remaining_balance"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_wallet_fill"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_wallet_fill"
                android:tint="@color/color_icon_card_remaining_balance"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@id/tv_title_remaining_balance"
                app:layout_constraintEnd_toStartOf="@id/icon_wallet_solid"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_wallet_solid"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_wallet_solid"
                android:layout_marginEnd="8dp"
                android:tint="@color/color_icon_card_remaining_balance"
                app:layout_constraintTop_toTopOf="@id/icon_wallet_fill"
                app:layout_constraintEnd_toStartOf="@id/icon_money"
                />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_money"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_money"
                android:tint="@color/color_icon_card_remaining_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_wallet_solid"
                />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_value_remaining_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_value_remaining_balance"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="24sp"
                android:textColor="?attr/colorValueCardRemainingBalance"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_remaining_balance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_desc_remaining_balance"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_desc_remaining_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_desc_remaining_balance"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"
                android:textColor="?attr/colorDescCardRemainingBalance"
                app:layout_constraintTop_toBottomOf="@id/tv_value_remaining_balance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="24dp"
        app:strokeWidth="0dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card_remaining_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_income">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="0.01"
                android:text="@string/title_income"
                android:textColor="?attr/colorTitleCardIncome"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_value_income"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_income"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_money_plus_line"
                android:tint="@color/color_icon_card_income"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_income"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_income" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_value_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/example_value_income"
                android:textColor="?attr/colorValueCardIncome"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider_income"
                app:layout_constraintStart_toStartOf="@id/tv_title_income"
                app:layout_constraintTop_toBottomOf="@id/tv_title_income" />


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="?attr/colorDividerCardIncome"
                app:layout_constraintBottom_toTopOf="@id/tv_desc_income"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_value_income" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_desc_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/example_desc_income"
                android:textColor="?attr/colorDescCardIncome"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_desc_income"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_income"
                tools:ignore="SmallSp" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_desc_income"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/color_desc_card_income"
                app:layout_constraintBottom_toBottomOf="@id/tv_desc_income"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_desc_income"
                app:layout_constraintTop_toTopOf="@id/tv_desc_income" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>